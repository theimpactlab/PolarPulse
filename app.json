{
  "expo": {
    "name": "PolarPulse",
    "slug": "polar-fitness",
    "scheme": "polar-fitness",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/PolarPulseLogo.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.polarfitness.app"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.polarfitness.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/PolarPulseLogo.png",
        "backgroundColor": "#0D0D0F"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/PolarPulseLogo.png",
      "name": "PolarPulse",
      "shortName": "PolarPulse",
      "description": "Track your recovery, strain, and sleep with Polar Flow integration",
      "backgroundColor": "#0D0D0F",
      "themeColor": "#00D1A7"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
